<!DOCTYPE html>
<html>

<head>
 <%- include('../auth/head.ejs') %>
</head>

<body>

    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12 text-center mb-5"><a href="https://github.com/FRTYZ">
                        <img id="mylogo" src="/static/auth/img/logo.png"></a>
                </div>
                <div class="row">
                   
                   
                    <div class="col-md-6 mx-auto">
                        <% if (typeof message != "undefined") { %>
                            <div class="alert alert-<%= message.class %>">
                                <%= message.text %>
                            </div>
                        <% } %>
                        <!-- form card login -->
                        <div class="card rounded-0" id="login-form">
                           
                            <div class="card-header">
                                <h3 class="mb-0"><%= title %></h3>
                            </div>
                            <div class="card-body">
                                <form class="form" method="post" action="/admin/account/new-password">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <input type="hidden" name="userId" value="<%= userId %>">
                                    <input type="hidden" name="token" value="<%= token %>">
                                    <div class="form-group">
                                        <label for="uname1">New Password</label>
                                        <input type="text"
                                            class="form-control form-control-lg rounded-0" name="password" id="password"
                                            required>
                                        </div>

                                    <button type="submit" class="btn btn-warning btn-lg float-right"
                                        ID="btnlogin">Update Password</button>
                                        
                                        <a class="btn btn-default btn-lg float-left"
                                        href="/admin/account/login">Cancel</a>

                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>