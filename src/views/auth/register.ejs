<!DOCTYPE html>
<html>

<head>
 <%- include('../auth/head.ejs') %>

</head>

<body>

    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12 text-center mb-5"><a href="https://github.com/FRTYZ">
                        <img id="mylogo" style="width: 20%;" src="/static/auth/img/logo.png"></a>
                </div>
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <% if (typeof message != "undefined") { %>
                            <div class="alert alert-<%= message.class %>">
                                <%= message.text %>
                            </div>
                        <% } %>
                        <!-- form card login -->
                        <div class="card rounded-0" id="login-form">
                           
                            <div class="card-header">
                                <h3 class="mb-0"><%= title %></h3>
                            </div>
                            <div class="card-body">
                                <form class="form" method="post">
                                    <div class="form-group">
                                        <label for="fullname">Full Name</label>
                                        <input type="text" placeholder="Elon Musk"
                                            class="form-control form-control-lg rounded-0" name="fullname" id="fullname"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" class="form-control form-control-lg rounded-0"
                                            id="email" required name="email">
                                    </div>
                                    <div class="form-group">
                                        <label>Confirm New Password</label>
                                        <input type="password" class="form-control form-control-lg rounded-0"
                                            id="password" required name="password">
                                    </div>

                                    <div class="form-group">
                                        <label>Confirm New Password</label>
                                        <input type="password" class="form-control form-control-lg rounded-0"
                                            id="passwordagain" required name="passwordagain">
                                    </div>
                                    <br>

                                    <button type="submit" class="btn btn-warning btn-lg float-right"
                                        >Save</button>
                                    
                                    <a class="btn btn-default btn-lg float-left"
                                        href="/admin/account/login">Cancel</a>

                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>