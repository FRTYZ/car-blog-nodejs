<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/admin-head.ejs') %>
  </head>
  <body>
    <div class="container-scroller">
      <%- include('../partials/admin-nav.ejs') %>
      <div class="container-fluid page-body-wrapper">
        <%- include('../partials/admin-side-nav.ejs') %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
            
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title"><%= title %></h4>
                    <form method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="userid" value="<%= user.id %>">
                        <input type="hidden" name="photo" value="<%= user.user_photo %>">
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4>Your data number <%= user.id %> will be deleted. do you confirm ?</h4>
                                   
                                </div>  
                            </div>
                        </div>
                        <button type="submit" class="btn btn-danger btn-rounded btn-fw">Yes</button>
                        <a href="/admin/users" class="btn btn-success btn-rounded btn-fw">No</a>
                        <div class="clearfix"></div>
                    </form>
                  </div>
                </div>
              </div>
             
            </div>
          </div>
          
          <%- include('../partials/admin-footer.ejs') %>
  </body>
</html>