<!DOCTYPE html>
<html lang="en">
  <head>
        <%- include('../partials/admin-head.ejs') %>
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
        <%- include('../partials/admin-nav.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <%- include('../partials/admin-side-nav.ejs') %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-md-6 d-flex align-items-stretch grid-margin">
                <div class="row flex-grow">
                  <div class="col-12">
                    <div class="card">
                      <div class="card-body">
                        <h4 class="card-title"><%= title %></h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="historyid" value="<%= dataforhistory.id %>">
                            <input type="hidden" name="photo" value="<%= dataforhistory.photo %>">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">                                    
                            <div class="form-group">
                                <label for="photo">File upload</label>
                                <img src="/static/user/image/GTR/<%= dataforhistory.photo %>" width="250">
                                <br/>
                                <input type="file" name="photo" class="form-control" id="photo" value="<%= dataforhistory.photo %>">
                              </div>
                            <div class="form-group">
                            <label for="model">Model Name</label>
                            <input type="text" class="form-control" name="model" value="<%= dataforhistory.models %>">
                          </div>
                          <div class="form-group">
                            <label for="model">Model Years</label>
                            <input type="text" class="form-control" name="years" value="<%= dataforhistory.years %>">
                          </div>
                          <div class="form-group">
                            <label for="years">Explanation</label>
                            <textarea id="editor" name="text" class="form-control"><%= dataforhistory.text %></textarea>
                          </div>
                         
                          <div class="form-check form-check-flat">
                            <label class="form-check-label"> Status
                            <input class="form-check-input" type="checkbox" name="active" id="active" <%= dataforhistory.active ? "checked" : "" %>>
                            
                          </div>
                          <button type="submit" class="btn btn-success mr-2">Update</button>
                          <button class="btn btn-light">Cancel</button>
                        </form>
                      </div>
                    </div>
                  </div>
                 
                </div>
              </div>
            </div>
          </div>
          <%- include('../partials/admin-footer.ejs') %>
  </body>
</html>